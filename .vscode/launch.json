{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: Debug (Chrome)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/frontend",
      "args": [
        "--web-renderer",
        "html",
        "-d",
        "chrome",
        "--dart-define=API_URL=http://localhost:3000"
      ]
    },
    {
      "name": "Flutter: Debug (Edge)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/frontend",
      "args": [
        "--web-renderer",
        "html",
        "-d",
        "edge",
        "--dart-define=API_URL=http://localhost:3000"
      ]
    },
    {
      "name": "Flutter: Profile Mode",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "profile",
      "args": [
        "--web-renderer",
        "html",
        "-d",
        "chrome",
        "--dart-define=API_URL=http://localhost:3000"
      ]
    },
    {
      "name": "Flutter: Release Mode (Local Backend)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "release",
      "args": [
        "--web-renderer",
        "html",
        "-d",
        "chrome",
        "--dart-define=API_URL=http://localhost:3000"
      ]
    },
    {
      "name": "Flutter: Release Mode (Production Backend)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "release",
      "args": [
        "--web-renderer",
        "html",
        "-d",
        "chrome",
        "--dart-define=API_URL=https://invoiceme-backend-77zj.onrender.com"
      ]
    },
    {
      "name": "Backend: Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:dev"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/backend/.env"
    },
    {
      "name": "Backend: Production Mode",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:prod"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "envFile": "${workspaceFolder}/backend/.env"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Debug",
      "configurations": [
        "Backend: Debug",
        "Flutter: Debug (Chrome)"
      ],
      "presentation": {
        "order": 1
      },
      "stopAll": true
    },
    {
      "name": "Full Stack: Release",
      "configurations": [
        "Backend: Production Mode",
        "Flutter: Release Mode (Local Backend)"
      ],
      "presentation": {
        "order": 2
      },
      "stopAll": true
    }
  ]
}
